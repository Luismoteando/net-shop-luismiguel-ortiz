@model IEnumerable<net_shop_luismiguel_ortiz.Models.Database.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Productos</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img src="~/Content/imgs/@item.Imagen" width="40px" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Precio)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Descripcion)
    </td>
    <td>
        @if (item.Cantidad < 1)
        {
            @:Out of stock
        }
        else
        {
            @Html.ActionLink("Add to chart", "Add", "Carrito", new { id = item.Id }, null)
        }
        | @Html.ActionLink("More details", "Details", new { id = item.Id })
    </td>
</tr>
}

</table>
